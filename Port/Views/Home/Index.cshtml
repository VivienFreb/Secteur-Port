
@{
    Layout = null;
}

@{Html.BeginForm(FormMethod.Post);}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <div align="center">
        <h2>Secteur</h2>
        <form action="~/Views/Home/Vue.cshtml" name="Secteur">
            <select id="Secteur" name="Secteur">
                @Html.Raw(ViewData["resultat"])
            </select>
            <input name="input" type="submit" value="Cliquez" style="background-color: transparent; cursor: pointer" />
        </form>

        <h2>Liaison</h2>
        <!-- Si aucun secteur sélectionné, on montre toutes les liaisons -->
        @{if (!IsPost)
        {
            <table border="1" cellpadding="10" cellspacing="0">

                <tr>
                    <th>ID Liaison</th>
                    <th>Distance</th>
                    <th>Port de Depart</th>
                    <th>Port d'Arrive</th>
                    <th>Id du Secteur</th>
                    <th>Id du Port de Depart</th>
                    <th>Id du Port d'Arrive</th>
                </tr>

                <tr>
                    @Html.Raw(Port.Models.Data.GetAllLiaison())
                </tr>

            </table>
        }
        }
        @{
            if (IsPost)
            {
                <table border="1" cellpadding="10" cellspacing="0">

                    <tr>
                        <th>ID Liaison</th>
                        <th>Distance</th>
                        <th>Port de Depart</th>
                        <th>Port d'Arrive</th>
                        <th>Id du Secteur</th>
                        <th>Id du Port de Depart</th>
                        <th>Id du Port d'Arrive</th>
                    </tr>

                    <tr>
                        @Html.Raw(Port.Models.Data.GetLiaison(Request.Form["Secteur"]))
                    </tr>

                </table>
            }
        }
    </div>

</body>
</html>